        <Button x:Name="ButtonPopulateGrid" Content="Populate Grid" HorizontalAlignment="Left" Margin="23,139,0,0" VerticalAlignment="Top" Width="89" Click="ButtonPopulateGrid_Click_1"/>
        <DataGrid x:Name="DataGridCurrencies" HorizontalAlignment="Left" Height="468" Margin="127,27,0,0" VerticalAlignment="Top" Width="624" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
